<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list android:opacity="transparent">
            <item android:gravity="right"
                  android:width="300dp"
                  android:start="50dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/soft_grey"/>
                    <corners android:radius="3.5dp"/>
                </shape>
            </item>
            <item android:width="50dp"
                  android:end="50dp"
                  android:right="50dp">
                <bitmap android:src="@drawable/birthday_icon"
                        android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>